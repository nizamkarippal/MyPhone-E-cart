//========== registration validation in user side============

// emali vlalidation
function mailValidator() {
  const inputMail = $("#your_mail").val();
  if (
    inputMail.match(
      /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
    )
  ) {
    $("#signin").prop("disabled", false);
    $("#mailInvalid").empty();
  } else {
    $("#signin").prop("disabled", true);
    $("#mailInvalid").html('<i class="fa fa-exclamation"></i>Invalid E-mail');
  }
}
//number validation in userregistration
    function numberValidator(){
      const inputNumber = $("#your_no").val();
      const numberReg = new RegExp("^[0-9]{10}$");
      if(numberReg.test(inputNumber)){
        $("#signin").prop("disabled",false);
        $("#numberInvalid").empty();
      }
      else{
        $("#signin").prop("disabled",true);
        $('#numberInvalid').html('<i class= "fa fa-exclamation"></i>Invalid contact Number');
      }
    }

    //password validation 
    function passwordValidator(){
      const inputPassword = $("#your_pass").val();
      if(inputPassword.length >=8){
        if(inputPassword.match(/^(?=.*?[A-Za-z])(?=.*?[0-9]).{8,}$/)){
          $("#signin").prop("disabled",false)
          $("#passwordInvalid").empty()
        }else{
          $("#signin").prop("disabled", true);
          $('#passwordInvalid').html('<i class="fa fa-exclamation"></i>Password must contain atlest a number and an alphabet');
        }
      }else{
        $("#signin").prop("disabled", true);
        $('#passwordInvalid').html('<i class="fa fa-exclamation"></i>Password must be atleast 8 characters');
      }
    }
    // password visibilitty
    function togglePasswordVisibility() {
    var passwordInput = document.getElementById("your_pass");
    if (passwordInput.type === "password") {
      passwordInput.type = "text";
    } else {
      passwordInput.type = "password";
    }
  }
      
    
