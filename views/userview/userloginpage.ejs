<head>
    <link rel="stylesheet" href="/user/css/userLoginPage.css" />
  </head>
  <body class="px-5 bg-none">
    <div class="container loginPageOverrides shadow-none card">
      <section class="sign-in">
          <div class="signin-content mb-0 pb-md-0 pb-lg-0 pb-xl-0 pb-5" >
            <div class="signin-image  py-0 img-fluid d-md-block d-none" >
              <figure>
                <img src="/public/user/images/logo img.avif"  />
              </figure>
            </div>
  
            <div class="signin-form">
              <h2 class="form-title">Sign in</h2>
              <form
                action="/login/validation"
                method="POST"
                class="register-form"
                id="login-form"
              >
                <div class="form-group">
                  <label for="your_name"
                    ><i class="zmdi zmdi-account material-icons-name"></i
                  ></label>
                  <input
                    type="email"
                    name="email"
                    id="your_mail"
                    placeholder="Email"
                    required
                    
                  />
                </div>
                <div class="form-group">
                  <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                  <input
                    type="password"
                    name="password"
                    id="your_pass"
                    placeholder="Password"
                    required
                  />
                </div>
                <% if(warning == "true"){%>
                  <p style="color:black">Wrong email or password</p>  
                <%}
                else if(warning =="false"){%>
                  <p style="color:black">This User not allowed this app</p>  
                <%}%>
                <div class="form-group form-button text-center">
                  <input
                    type="submit"
                    name="signin"
                    id="signin"
                    class="form-submit"
                    value="Log in"
                  />
                </div>
                <a href="/registration" class="signup-image-link">New user? Create account</a>
                <a href="/forgotpassword" class="signup-image-link">Forgot password?</a>
              </form>
            </div>
          </div>
  
      </section>
    </div>
  </body>