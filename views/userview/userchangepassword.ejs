    <%- include('./partials/navBarLeft')%>
    <div style="height:5vw" class="my-3"></div>
    <div class="container-fluid" style="margin-bottom: 50px;">
      <section >
        <div class="mask d-flex align-items-center h-100 gradient-custom-3 my-4">
          <div class="container h-100">
