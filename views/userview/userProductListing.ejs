                    </li>
                  </ul>
              </div>

              <%}else{%>
                <a href="/login"><i class="fa-solid fa-right-to-bracket text-primary"></i> LogIn</a>


                <%}%>
            </div>

          </div>
        </div>
      </nav>

    </div>

